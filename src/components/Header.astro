<header class="site-header">
  <div class="container">
    <!-- 1. Logo Metin Yerine Resim Olarak Eklendi -->
    <a href="/" class="logo">
      <img src="/logob.svg" alt="BrandName Logo" />
    </a>

    <!-- 2. Masaüstü Menüsü -->
    <nav class="nav-desktop">
      <a href="#about">About</a>
      <a href="#services">Services</a>
      <a href="https://example.com" target="_blank">Wallnlove - Design Archive</a>
      <a href="#contact">Contact</a>
    </nav>

    <!-- 3. Mobil için Burger Menü İkonu -->
    <button class="hamburger-menu" aria-label="Open Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- 4. Mobil Menü (Başlangıçta Gizli) -->
  <nav class="nav-mobile">
    <a href="#about">About</a>
    <a href="#services">Services</a>
    <a href="https://example.com" target="_blank">Wallnlove - Design Archive</a>
    <a href="#contact">Contact</a>
  </nav>
</header>

<style>
  .site-header {
    background-color: var(--header-footer-bg);
    padding: 15px 0;
    
    /* YENİ EKLENEN/DEĞİŞEN SATIRLAR */
    position: sticky; /* En önemli kural bu */
    top: 0;           /* Ekranın en tepesine yapışmasını sağlar */
    width: 100%;      /* Tam genişlikte kalmasını garanti eder */
    z-index: 1000;    /* Diğer tüm elemanların üstünde kalmasını sağlar */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05); /* Aşağı kayınca belli olması için hafif bir gölge */
  }

  .site-header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo img {
    height: 80px; /* Logonun yüksekliğini buradan ayarla */
    display: block;
  }

  .nav-desktop a {
    text-decoration: none;
    color: var(--text-color);
    margin-left: 30px;
    font-size: 1rem;
    transition: color 0.2s;
  }
  .nav-desktop a:hover {
    color: var(--primary-color);
  }

  /* --- Burger Menü Stilleri --- */
  .hamburger-menu {
    display: none; /* Masaüstünde gizli */
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 24px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .hamburger-menu span {
    display: block;
    width: 100%;
    height: 3px;
    background-color: var(--text-color);
    border-radius: 3px;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  /* Burger menü açıldığında (X ikonuna dönüşüm) */
  .hamburger-menu.is-active span:nth-child(1) {
    transform: translateY(10.5px) rotate(45deg);
  }
  .hamburger-menu.is-active span:nth-child(2) {
    opacity: 0;
  }
  .hamburger-menu.is-active span:nth-child(3) {
    transform: translateY(-10.5px) rotate(-45deg);
  }

  /* --- Mobil Menü Stilleri --- */
  .nav-mobile {
    display: none; /* Başlangıçta gizli */
    flex-direction: column;
    position: absolute;
    top: 100%; /* Header'ın hemen altına */
    left: 0;
    width: 100%;
    background-color: var(--header-footer-bg);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .nav-mobile.is-active {
    display: flex; /* Aktif olunca görünür yap */
  }

  .nav-mobile a {
    text-decoration: none;
    color: var(--text-color);
    padding: 15px 20px;
    text-align: center;
    border-top: 1px solid #e0d9cf;
  }

  /* --- RESPONSIVE KONTROL --- */
  @media (max-width: 768px) {
    .nav-desktop {
      display: none; /* Mobilde masaüstü menüyü gizle */
    }
    .hamburger-menu {
      display: flex; /* Mobilde burger menüyü göster */
    }
  }

  @media (min-width: 769px) {
      .hamburger-menu, .nav-mobile {
          display: none; /* Masaüstünde burger ve mobil menüyü kesinlikle gizle */
      }
  }
</style>

<script>
  // Burger menüye tıklandığında çalışacak kod
  const hamburger = document.querySelector('.hamburger-menu');
  const mobileNav = document.querySelector('.nav-mobile');
  const navLinks = mobileNav.querySelectorAll('a');

  // Burger ikonuna tıklandığında...
  hamburger.addEventListener('click', () => {
    // ikona ve menüye 'is-active' class'ını ekle/kaldır
    hamburger.classList.toggle('is-active');
    mobileNav.classList.toggle('is-active');
  });
  
  // Mobil menüdeki bir linke tıklandığında menüyü kapat
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
        hamburger.classList.remove('is-active');
        mobileNav.classList.remove('is-active');
    });
  });
</script>